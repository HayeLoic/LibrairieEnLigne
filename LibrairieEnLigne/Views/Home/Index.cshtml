@model List<LibrairieEnLigne.Models.Livre>
@{
    ViewBag.Title = "Accueil";
}

<div class="jumbotron">
    <h1>Librairie en Ligne</h1>
    <p class="lead">
        Librairie en Ligne est une application ASP.NET MVC 5 utilisant le framework .NET 4.6, Entity Framework 6 Code First et Bootsrap.
        Elle simule un site de vente de livres en ligne.
    </p>
</div>
@using (Html.BeginForm("Recherche", "Home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    <div class="jumbotron">
        @Html.Label("Recherche : ")
        @Html.TextBox("recherche", string.Empty, new { placeholder = "Titre ou auteur recherché" })
        <input type="submit" class="btn btn-default" value="Rechercher" />
    </div>
}

<div class="row">
    @foreach (var livre in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="jumbotron">
                <h2>@livre.Titre</h2>
                <h3>@livre.Auteur.Nom</h3>
                <h3>@livre.Prix €</h3>
                <p>@livre.Description</p>
            </div>
        </div>
    }
</div>
